@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
}


<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
               
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group my-3">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control my-3" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control my-3" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <div class="checkbox my-3">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group my-3">
                    <button type="submit" class="btn btn-primary">تسجيل الدخول</button>
                </div>
                <div class="form-group my-3">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">نسيت كلمة السر؟</a>
                    </p>
                   
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">أعد ارسال رابط التحقق</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}