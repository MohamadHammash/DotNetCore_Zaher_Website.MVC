@model DeleteQAViewModel

@{
    ViewData["Title"] = "إزالة سؤال";

}
<input type="hidden" asp-for="Id" />
<h1 class="text-danger">هل أنت متأكد من أنك تريد حذف السؤال ؟</h1>

<div class="container">
    <div>
        <p>
            السؤال سأله الأخ/ت <span>@($"{Model.FirstName} {Model.LastName}")</span> بتاريخ <span>@Model.PublishingDate.ToString("yyyy-MM-dd hh:mm tt", new CultureInfo("ar-AE"))</span>
        </p>
    </div>
</div>

<form asp-action="Delete">
    <span>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="إزالة" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-controller="Sections" asp-action="Details" asp-route-id="@Model.SectionId">العودة إلى الأسئلة</a>
    </span>
</form>