@model DeleteVideoViewModel

@{
    ViewData["Title"] = "حذف المقطع";
}
<input type="hidden" asp-for="Id" />

<h3>هل أنت متأكد أنك تريد حذف هذا المقطع؟</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.URL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.URL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VideosList)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VideosList.ListName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="VideosListId" />
        <input type="submit" value="إزالة" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-controller="VideosLists" asp-action="Details" asp-route-id="@Model.VideosListId">الرجوع إلى قائمة التشغيل</a>
    </form>
</div>