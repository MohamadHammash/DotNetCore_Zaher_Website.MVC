@model DeleteVideosListViewModel

@{
    ViewData["Title"] = "حذف قائمة التشغيل";
}

<h1 class="text-danger">هل أنت متأكد من أنك تريد حذف قائمة التشغيل ؟</h1>

<h3 class="text-danger">حذف القائمة سيؤدي إلى إزالة جميع المقاطع بداخل القائمة!</h3>
<div>

    <input type="hidden" asp-for="Id" />
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ListName)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.ListName)
        </dd>
        <dd class="col-sm-6">
            @if (!String.IsNullOrWhiteSpace(@Model.ImagePath))
            {
                <div class="card-img">
                    <img class="card-img" src="~/Uploads/@Model.ImagePath" />
                </div>
            }
            else
            {
                <img src="~/Assets/noimage.png" />
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="إزالة" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">العودة إلى قوائم التشغيل</a>
    </form>
</div>